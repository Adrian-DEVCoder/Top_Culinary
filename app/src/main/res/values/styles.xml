<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para el contador dentro de las realizacion de las recetas-->
    <style name="ContadorStyle">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/alegreya_sc</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/contador_background</item>
    </style>
    <!-- Estilo para los items del spinner de unidadades -->
    <style name="SpinnerItemTextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/alegreya_sc</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpinnerDropdownItemTextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/alegreya_sc</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>