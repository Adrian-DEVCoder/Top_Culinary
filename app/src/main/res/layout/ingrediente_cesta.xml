<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:layout_marginStart="24dp"
    app:circularflow_defaultRadius="20dp"
    android:layout_marginEnd="32dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewIngrediente"
        android:layout_width="150dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:foregroundGravity="center">

        <LinearLayout
            android:id="@+id/linearLayoutIngrediente"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewIngrediente"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/avatar" />

            <TextView
                android:id="@+id/textViewNombreIngrediente"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/alegreya_sc"
                android:lineSpacingExtra="4sp"
                android:text="Aceite de Oliva"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPrecioIngrediente"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sc"
                android:text="3.50â‚¬"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonComprarIngrediente"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/naranja_more"
                android:fontFamily="@font/alegreya_sc"
                android:text="Comprar"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>