<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CEBDAC0"
    tools:context=".registro.RegistroActivity">
    <!-- COMIENZO PAGINA -->

    <!-- Imagen para el fondo del titulo -->
    <ImageView
        android:id="@+id/imgFondo"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:alpha="0.65"
        android:src="@drawable/fondologin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Imagen del Titulo -->
    <ImageView
        android:id="@+id/imgTituloFondo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:src="@drawable/logotop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Textview de Nuevo Chef -->
    <TextView
        android:id="@+id/txvNuevoChef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Nuevo/a Chef"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFondo" />
    <!-- Textview del Email -->
    <TextView
        android:id="@+id/txvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvNuevoChef" />
    <!-- Campo editable del Email -->
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/alegreya_sc"
        android:hint="prueba.prueba@prueba.com"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txvEmail"
        app:layout_constraintTop_toBottomOf="@+id/txvNuevoChef" />
    <!-- Textview de Contraseña -->
    <TextView
        android:id="@+id/txvContrasenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Contraseña:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvEmail" />
    <!-- Campo editable de la Contraseña -->
    <EditText
        android:id="@+id/edtContrasenia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/alegreya_sc"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txvContrasenia"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail" />

    <!-- Textview de Elige un Tema -->
    <TextView
        android:id="@+id/txvEligeTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Selecciona un Tema"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtContrasenia" />

    <!-- Temas App Linear-->
    <LinearLayout
        android:id="@+id/llTemas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvEligeTema">
        <!-- Tema Naranja -->
        <ImageView
            android:id="@+id/imgTemaNaranja"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginRight="20dp"
            android:src="@drawable/cnaranja"
            android:scaleType="fitCenter"/>
        <!-- Tema Verde -->
        <ImageView
            android:id="@+id/imgTemaVerde"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginRight="20dp"
            android:src="@drawable/cverde"
            android:scaleType="fitCenter"/>
        <!-- Tema Rojo -->
        <ImageView
            android:id="@+id/imgTemaRojo"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginRight="20dp"
            android:src="@drawable/crojo"
            android:scaleType="fitCenter"/>
        <!-- Tema Marron -->
        <ImageView
            android:id="@+id/imgTemaMarron"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginRight="20dp"
            android:src="@drawable/cmarron"
            android:scaleType="fitCenter"/>
        <!-- Tema Azul -->
        <ImageView
            android:id="@+id/imgTemaAzul"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/cazul"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <!-- Boton para el registro -->
    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF9800"
        android:fontFamily="@font/alegreya_sc"
        android:text="Registrar Chef"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llTemas"/>

    <!-- Textview de Ya eres un chef -->
    <TextView
        android:id="@+id/txvYaChef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="¿Ya eres un/a chef?"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistro" />

    <!-- Boton para volver al inicio de sesion -->
    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:fontFamily="@font/alegreya_sc"
        android:text="Iniciar Sesión"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvYaChef"/>
</androidx.constraintlayout.widget.ConstraintLayout>